            <div class="form-group">
                <label asp-for="Doctorid" class="control-label"></label>
                <input asp-for="Doctorid" class="form-control" value="@Context.Session.GetInt32("DoctorId")" readonly/>
                <span asp-validation-for="Doctorid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Patientid" class="control-label"></label>
                <input asp-for="Patientid" class="form-control" value="@Context.Session.GetInt32("patientId")" readonly/>
                <span asp-validation-for="Patientid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="date" class="control-label"></label>
                <input asp-for="date" type="date" id="Appointmentdate" class="form-control" onchange="validateAppointmentDate()" />
