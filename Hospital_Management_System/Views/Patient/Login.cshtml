@model ModelLayer.Models.LoginPatient

@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<h4>Login for Patient</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @* <label asp-for="Id" class="control-label"></label> *@
                <input asp-for="Id" class="form-control mt-4" placeholder="Id" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                @* <label asp-for="Name" class="control-label"></label> *@
                <input asp-for="Name" class="form-control mt-4" placeholder="Enter your Name"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mt-4 mb-4" align="center">
                <input type="submit" value="Enter" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

